<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/layoutCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:cardBackgroundColor="@color/fondoCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/imagenIconListaCompra"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_home" />

            <TextView
                android:id="@+id/listaTitulo"
                android:layout_width="303dp"
                android:layout_height="21dp"

                android:layout_marginStart="10dp"
                android:text="Lorem "
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imagenEliminarLista"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imagenIconListaCompra"
                app:layout_constraintTop_toTopOf="@+id/imagenIconListaCompra"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textViewListaCompraDescripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/listaTitulo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/listaTitulo"
                app:layout_constraintTop_toBottomOf="@+id/listaTitulo"
                app:layout_constraintVertical_bias="0.148"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/imagenEditarLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/listaTitulo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/listaTitulo"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_options"
                app:tint="@color/selecionado" />

            <ImageView
                android:id="@+id/imagenEliminarLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/listaTitulo"
                app:layout_constraintEnd_toStartOf="@+id/imagenEditarLista"
                app:layout_constraintTop_toTopOf="@+id/listaTitulo"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_options"
                app:tint="@color/selecionado" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/listaTitulo"
                app:layout_constraintVertical_bias="0.964" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>